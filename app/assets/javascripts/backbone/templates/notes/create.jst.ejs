<% if( typeof errors !== "undefined") { %>
  <ul class="errors">
    <% for (error in errors) { %>
      <li>
        <strong><%= error %>:</strong>
        <span><%= errors[error] %></span>
      </li>
    <% } %>
  </ul>
<% } %>
<form id="new-post" name="post">
<div class="modal-header">
  <a href="#" class="close">&times;</a>
  <h3>Add New Note</h3>
</div>
<div class="modal-body">
	<div class="clearfix">
		<label for="title">Title:</label>
		<div class="input">
			<input class="xlarge" id="title" name="title" type="text"  value="<%= title %>"/>
		</div>
	</div>

	<div class="clearfix">
		<label for="content">Text</label>
		<div class="input">
			<textarea class="xlarge" id="content" name="content" rows="10"><%= content %></textarea>
		</div>
	</div>

	<div class="clearfix">
		<label for="categories">Categories:</label>
		<div class="input">
			<ul class="xlarge" id="categories" name="categories" type="text"  value=""></ul>
		</div>
	</div>
</div>
<div class="modal-footer">
  <input type="submit" value="Save" class="btn success"/>
  <a href="#" class="btn danger">Cancel</a>
</div>
</form>
